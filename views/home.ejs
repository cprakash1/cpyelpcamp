                    <h5 class="card-title"><%= c.title %> </h5>
                    <p class="card-text"><%= c.description %> </p>
                    <p class="card-text text-muted"><%= c.location %> </p>
                    <a class="btn btn-primary" href="/campground/<%= c.id %>">View</a>
                </div>
                </div>
            </div>
        </div>
    <% } %> 
